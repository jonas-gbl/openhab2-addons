<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="verisure"
                          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                          xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
                          xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <bridge-type id="verisure-alarm">
        <label>Verisure Alarm System</label>
        <description>A thing for a Verisure Alarm System</description>

        <channels>
            <channel id="alarm-status-channel" typeId="alarm-status-channel"/>
        </channels>

        <config-description>
            <parameter name="giid" type="text" required="true">
                <label>Installation GIID</label>
                <description>The Installation GIID of the Verisure alarm system</description>
            </parameter>
            <parameter name="refresh" type="integer" min="10" required="true">
                <label>Refresh interval</label>
                <description>Specifies the refresh interval in seconds.</description>
                <default>60</default>
            </parameter>
            <parameter name="username" type="text" required="true">
                <label>Username</label>
                <description>The username used for Verisure MyPages</description>
            </parameter>
            <parameter name="password" type="text" required="true">
                <label>Password</label>
                <context>password</context>
                <description>The password used for Verisure MyPages</description>
            </parameter>
            <parameter name="baseurl" type="text" required="true">
                <label>API endpoint</label>
                <description>The base URL for the Verisure API</description>
                <default>https://e-api02.verisure.com/xbn/2</default>
            </parameter>
            <parameter name="pin" type="text">
                <label>PIN code</label>
                <context>password</context>
                <description>PIN code to update alarm state (If absent, functionality will be disabled)</description>
            </parameter>
        </config-description>
    </bridge-type>

    <thing-type id="climate-sensor">
        <supported-bridge-type-refs>
            <bridge-type-ref id="verisure-alarm"/>
        </supported-bridge-type-refs>

        <label>Climate Sensor</label>
        <description>A climate sensor reporting temperature and humidity</description>

        <channels>
            <channel id="temperature-channel" typeId="temperature-channel"/>
            <channel id="humidity-channel" typeId="humidity-channel"/>
            <channel id="location-channel" typeId="location-channel"/>
            <channel id="last-update-channel" typeId="last-update-channel"/>
        </channels>

        <config-description>
            <parameter name="device-label" type="text" required="true">
                <label>Device Label</label>
                <description>The label of the device within a specific installation</description>
            </parameter>
        </config-description>
    </thing-type>

    <thing-type id="window-door">
        <supported-bridge-type-refs>
            <bridge-type-ref id="verisure-alarm"/>
        </supported-bridge-type-refs>

        <label>Window/Door Sensor</label>
        <description>A contact sensor for a window/door</description>

        <channels>
            <channel id="window-door-channel" typeId="window-door-channel"/>
            <channel id="location-channel" typeId="location-channel"/>
            <channel id="last-update-channel" typeId="last-update-channel"/>
        </channels>

        <config-description>
            <parameter name="device-label" type="text" required="true">
                <label>Device Label</label>
                <description>The label of the device within a specific installation</description>
            </parameter>
        </config-description>
    </thing-type>

    <thing-type id="smart-plug">
        <supported-bridge-type-refs>
            <bridge-type-ref id="verisure-alarm"/>
        </supported-bridge-type-refs>

        <label>Smart Plug</label>
        <description>A Smart Plug remote switch</description>

        <channels>
            <channel id="on-off-channel" typeId="on-off-channel"/>
            <channel id="location-channel" typeId="location-channel"/>
        </channels>

        <config-description>
            <parameter name="device-label" type="text" required="true">
                <label>Device Label</label>
                <description>The label of the device within a specific installation</description>
            </parameter>
        </config-description>

        <!--"isHazardous": false,-->
        <!--"area": "Kitchen 1",-->
        <!--"pendingState": "NONE",-->
        <!--"deviceLabel": "2ALF VL3M",-->
        <!--"currentState": "OFF",-->
        <!--"icon": "OTHER"-->
    </thing-type>


    <channel-type id="alarm-status-channel">
        <item-type>String</item-type>
        <label>Alarm Status</label>
        <description>The status of Verisure Alarm System</description>
        <state readOnly="false">
            <options>
                <option value="ARMED_AWAY">Armed (Away)</option>
                <option value="ARMED_HOME">Armed (Home)</option>
                <option value="DISARMED">Disarmed</option>
            </options>
        </state>
    </channel-type>

    <channel-type id="temperature-channel">
        <item-type>Number</item-type>
        <label>Temperature</label>
        <description>Current temperature in degrees celsius</description>
        <category>Temperature</category>
        <state readOnly="true" pattern="%.1f Â°C"/>
    </channel-type>

    <channel-type id="humidity-channel">
        <item-type>Number</item-type>
        <label>Humidity</label>
        <description>Current humidity in %</description>
        <category>Humidity</category>
        <state readOnly="true" pattern="%d %%"/>
    </channel-type>

    <channel-type id="last-update-channel">
        <item-type>String</item-type>
        <label>Last Update</label>
        <description>Timestamp of last update</description>
        <state readOnly="true"/>
    </channel-type>

    <channel-type id="location-channel">
        <item-type>String</item-type>
        <label>Location</label>
        <description>location</description>
        <state readOnly="true"/>
    </channel-type>

    <channel-type id="window-door-channel">
        <item-type>Contact</item-type>
        <label>Status</label>
        <description>Status of the window/door</description>
        <state readOnly="true"/>
    </channel-type>

    <channel-type id="on-off-channel">
        <item-type>Switch</item-type>
        <label>Status</label>
        <description>Status of the Smart Plug</description>
        <state readOnly="false"/>
    </channel-type>

</thing:thing-descriptions>
